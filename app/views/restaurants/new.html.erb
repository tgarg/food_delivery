<%= provide(:title, "Admin")%>
<br>
<h1>Add a restaurant</h1>
<div class="container">
	<div class="row">
		<div class="span6 offset3">
			<%= form_for(@restaurant) do |f| %>
				<%= render 'shared/error_messages', :object => f.object %>

				<%= f.label :name %>
			  <%= f.text_field :name %>

			  <%= f.label :description %>
			  <%= f.text_field :description %>

			  <%= f.submit "Add to database", :class => "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>
</div>